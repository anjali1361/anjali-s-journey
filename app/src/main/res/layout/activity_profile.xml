<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <ImageView
         android:id="@+id/imgBarbi"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_margin="20dp"
         android:src="@drawable/barbi"/>
    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BARBI"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imgBarbi"/>
    <TextView
        android:id="@+id/txtLayoutSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my fav image"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgBarbi"
        android:layout_below="@id/txtLayoutHeader"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/txtLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="love this one"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgBarbi"
        android:layout_below="@+id/txtLayoutSubheader"
        android:textColor="#000000"
        android:layout_marginTop="18sp" />
    <Button
        android:id="@+id/btnMoreInfo"
        android:text="More Information"
        android:background="#1565c0"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@id/imgBarbi"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit The App"
        android:layout_alignParentBottom="true"
        android:background="#ff1744"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp"/>


        

</RelativeLayout>